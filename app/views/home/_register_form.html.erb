<%= form_tag :register, :method => :post, :class => "form" do %>
<dl>
  <dt>
    <strong><%= label_tag :email, 'E-mail:' %></strong>
  </dt>
  <dd>
    <%= text_field_tag :email, nil, :class => "form-input" %>
  </dd>
  <dt>
    <strong><%= label_tag :email, 'Пароль:' %></strong>
  </dt>
  <dd>
    <%= password_field_tag :password, nil, :class => "form-input" %>
  </dd>
  <dt>
    <strong><%= label_tag :email, 'Подтверждение пароля:' %></strong>
  </dt>
  <dd>
    <%= password_field_tag :password, nil, :class => "form-input" %>
  </dd>
  <dt>
    <strong><%= label_tag :name, 'Имя в игре' %></strong>
  </dt>
  <dd>
    <%= text_field_tag :name, nil, :class => "form-input" %>
  </dd>

  <%= submit_tag 'Регистрация', :class => "big-button anim-button big-y-button" %>
<% end %>