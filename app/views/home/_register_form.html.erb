<%= form_for(@user, url: :register, remote: true, html: { id: 'form-register', class: 'form' }) do |f|%>
<dl>
  <dt>
    <strong><%= f.label :email, 'E-mail:' %></strong>
  </dt>
  <dd>
    <%= f.text_field :email, class: 'form-input' %>
  </dd>
  <dt>
    <strong><%= f.label :password, 'Пароль:' %></strong>
  </dt>
  <dd>
    <%= f.password_field :password, class: 'form-input' %>
  </dd>
  <dt>
    <strong><%= f.label :password_confirmation, 'Подтверждение пароля:' %></strong>
  </dt>
  <dd>
    <%= f.password_field :password_confirmation, class: 'form-input' %>
  </dd>
  <dt>
    <strong><%= f.label :name, 'Имя в игре' %></strong>
  </dt>
  <dd>
    <%= f.text_field :name, class: 'form-input' %>
  </dd>

  <%= f.submit 'Регистрация', class: 'big-button anim-button big-y-button' %>
<% end %>
