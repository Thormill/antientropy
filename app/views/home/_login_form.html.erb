<%= form_tag :login, :method => :post, :class => "form-login" do %>
<dl>
  <dt>
    <strong><%= label_tag :email, 'E-mail:' %></strong>
  </dt>
  <dd>
    <%= text_field_tag :email, nil, :class => "login-input" %>
  </dd>
  <dt>
    <strong><%= label_tag :email, 'Пароль:' %></strong>
  </dt>
  <dd>
    <%= password_field_tag :password, nil, :class => "login-input" %>
  </dd>
  <div class="login-line">
    <%= check_box_tag :remember %>
    <%= label_tag :remember, 'Запомнить меня' %>
    
    <%= link_to 'Забыли пароль?' %>
  </div>
  <%= submit_tag 'Вход', :class => "big-g-button" %>

<% end %>
