<%  aTypeList = []  %>
<%  QuestType.all.each do |t|  %>
<%    aTypeList.push([t.name, t.id])  %>
<%  end  %>

<%= form_for [:admin, @quest], :remote => true do |f| %>
<%=   f.label          "Заголовок" %><br>
<%=   f.text_field     :title %><br>
<%=   f.label          "Текст" %><br>
<%=   f.text_area      :text %><br>
<%=   f.select(:qtype, aTypeList) %><br>
<%=   f.label          "Локация(айди)" %><br>
<%=   f.text_field     :location_id %><br>
<%=   f.label          "Время на выполнение" %><br>
<%=   f.text_field     :time_to_make %><br>
<%=   f.submit "Создать квест" %>
<%  end %>
