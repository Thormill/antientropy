<h1>Список квестов</h1>
<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
<p><%= link_to 'Запилить еще один', new_admin_quest_path %></p>

<table class="quest_list">
  <tr>
    <th style="width:5%;">#</th>
    <th style="width:15%;">Заголовок</th>
    <th style="width:30%;">Текст</th>
    <th style="width:10%;">Тип</th>
    <th style="width:5%;">№ локации</th>
    <th style="width:10%;">Время на выполнение</th>
    <th style="width:5%;"></th>
    <th style="width:5%;"></th>
    <th style="width:5%;"></th>
  </tr>
<% @quests.each do |quest| %>
  <tr>
    <td><%= quest.id %></td>
    <td><%= quest.title %></td>
    <td><%= quest.text %></td>
    <td><%= QuestTypes.find(quest.qtype).name %></td>
    <td><%= quest.location_id %></td>
    <td><%= quest.time_to_make %></td>
    <td><%= link_to 'Show', admin_quest_path(quest) %></td>
    <td><%= link_to 'Edit', edit_admin_quest_path(quest) %></td>
    <td><%= link_to 'Destroy', admin_quest_path(quest), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
