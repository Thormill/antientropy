<div class="topbar" data-scrollspy="scrollspy" data-dropdown="dropdown">
  <div class="fill">
    <div class="container-fluid">
      <a class="brand" href="#">CheckPoint</a>
      <ul class="nav">
        <li><a href="#">Чатики</a></li>
      </ul>

      <% if logged_in?%>
        <ul class="nav secondary-nav">
          <li class="menu"><a href="#" class="menu"><%= current_user.name %></a>
            <ul class="menu-dropdown">
              <li><a href="#">1</a></li>
              <li class="divider"></li>
              <li><%= link_to "Выход", :logout %></li>
            </ul>
          </li>
        </ul>
      <% end %>
        
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="sidebar" style="height:500px; ">
    <div class="well">
      <h5>Нашивочки и пискометрики</h5>
    </div>
  
  </div>

  <div class="content">
    <div class="hero-unit">
      <h3>Карта</h3>
    </div>
      
    <div class="row">
      <div class="span5">
        <h3>Текущее заданьеце</h3>
      </div>
      <div class="span5">
        <h3>Что-то еще</h3>
      </div>

      <div class="span6">
      <div class="well">
        <h3>Чат</h3>
        <ul class="tabs" data-tabs="chat-tabs">
          <li class="active"><a href="#chat_common">Общий</a></li>
          <li><a href="#chat_team">Команда</a></li>
        </ul>
        <div id="chat-tab-content" class="tab-content">

          <div class="tab-pane active" id="chat_common">
            <div id="chat-common-messages" style="height:200px; overflow-x: auto; "></div>
            <%= form_tag messages_new_path, remote: true do %>
              <%= text_field_tag :message %>
              <%= submit_tag :post %>
            <% end %>
          </div>
          <div class="tab-pane" id="chat_team">
            <div id="chat-team-messages"></div>
            
          </div>
        </div>
      </div>
      </div>
      
    </div>
  </div>
</div>

<% content_for :stylesheets do %>
  <% stylesheet_link_tag "profile" %>
<% end %>

<% content_for :javascripts do %>
  <% javascript_include_tag FAYE_HOST+'faye.js', "profile" %>
<% end %>
